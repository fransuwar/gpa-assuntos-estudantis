<?xml version="1.0" encoding="UTF-8"?>

<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	<http auto-config="true" use-expressions="true">
		<access-denied-handler error-page="/403" />
 		<intercept-url pattern="/login*" access="permitAll" />
 		<intercept-url pattern="/webjars/**" access="permitAll" />
 		
 		<intercept-url pattern="/selecao/informacoes/*" access="permitAll"/>
 		<intercept-url pattern="/selecao/listar" access="permitAll"/>
 		<intercept-url pattern="/selecao/downloadDocumento/*" access="permitAll"/>
 		<intercept-url pattern="/selecao/**" access="hasAnyRole('COORD_ASS_ESTUDANTIS', 'SERVIDOR')" />
 		<intercept-url pattern="/selecao/inscritos/relatorioVisita/**" access="hasRole('SERVIDOR')" />
 		<intercept-url pattern="/selecao/inscritos/*" access="hasAnyRole('COORD_ASS_ESTUDANTIS', 'SERVIDOR')" />
 		<intercept-url pattern="/selecao/**" access="hasRole('COORD_ASS_ESTUDANTIS')" />
 		<intercept-url pattern="/selecao/inscritos/informacoesRelatorio/*" access="hasAnyRole('COORD_ASS_ESTUDANTIS', 'SERVIDOR')" />	
 		<intercept-url pattern="/selecao/listarPorServidor/*" access="hasRole('SERVIDOR')" />	
 		<intercept-url pattern="/selecao/**" access="hasAnyRole('COORD_ASS_ESTUDANTIS', 'SERVIDOR')" />
 		<intercept-url pattern="/selecao/inscritos/relatorioVisita/**" access="hasRole('SERVIDOR')" />
 		<intercept-url pattern="/selecao/inscritos/*" access="hasAnyRole('COORD_ASS_ESTUDANTIS', 'SERVIDOR')" />

		<intercept-url pattern="/aluno/*/editar" access="hasAnyRole('SERVIDOR', 'DISCENTE')" />
		<intercept-url pattern="/aluno/listar" access="hasAnyRole('COORD_ASS_ESTUDANTIS', 'SERVIDOR')" />
		<intercept-url pattern="/aluno/**" access="hasRole('DISCENTE')" />
		
 		<intercept-url pattern="/servidor/**" access="hasRole('SERVIDOR')" />
 		
 		<intercept-url pattern="/auxilio/**" access="hasRole('DISCENTE')" />
 		
 		<intercept-url pattern="/iniciacao/**" access="hasRole('DISCENTE')" />
 		
 
 		<form-login login-page="/login" default-target-url="/"
			authentication-success-handler-ref="authenticationSuccessHandlerImpl"
			authentication-failure-url="/loginfailed" />
		<logout logout-success-url="/selecao/listar" invalidate-session="true" />
 		
 	</http>

	<beans:bean id="authenticationSuccessHandlerImpl" class="br.ufc.quixada.npi.gpa.controller.AuthenticationSuccessHandlerImpl" />
	
	<beans:bean id="ldapAuthentication" class="br.ufc.quixada.npi.gpa.service.LdapAuthentication"></beans:bean>
	
		<authentication-manager alias="authenticationManager">
			<authentication-provider ref="ldapAuthentication"></authentication-provider>
		</authentication-manager>
		
	<global-method-security secured-annotations = "enabled" />
	
</beans:beans>